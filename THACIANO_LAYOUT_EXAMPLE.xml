<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thaciano OTP Brute-Force Matcher"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#000000" />

        <!-- Phone Numbers Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Numbers (comma-separated):"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etPhones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0781111111,0782222222,0783333333"
            android:inputType="phone"
            android:minLines="3"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- PIN Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saved PIN:"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1234"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Brute-Force"
                android:textColor="#FFFFFF"
                android:background="#4CAF50"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop"
                android:textColor="#FFFFFF"
                android:background="#F44336"
                android:enabled="false" />
        </LinearLayout>

        <!-- Status Text -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to start"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="8dp" />

        <!-- Current Phone -->
        <TextView
            android:id="@+id/tvCurrentPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phones: 0/0"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Phone Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBarPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0" />

        <!-- Current OTP -->
        <TextView
            android:id="@+id/tvCurrentOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTPs: 0001 â†’ 9999"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- OTP Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBarOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="9999"
            android:progress="0" />

        <!-- Results Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Results ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#F5F5F5"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:textColor="#000000" />
        </ScrollView>

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â„¹ï¸ The system will try all OTPs from 0001 to 9999 for each phone until a match is found.\n\nâ±ï¸ Estimated time: ~22 hours per phone (9999 OTPs Ã— 8 sec)\n\nðŸ’¡ Tip: Use multiple devices in parallel to speed up processing."
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="#FFF9C4" />

    </LinearLayout>
</ScrollView>
